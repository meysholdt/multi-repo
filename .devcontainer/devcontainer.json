{
  "name": "multi-repo",
  "image": "mcr.microsoft.com/devcontainers/base:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "workspaceFolder": "/workspaces",
  // "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/multi-repo,type=bind"
  "workspaceMount": "source=/workspaces,target=/workspaces,type=bind",
  "onCreateCommand": "git clone https://github.com/organization/second-repo.git"
}